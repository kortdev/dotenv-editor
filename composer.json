{
    "name": "kortdev/dotenv-editor",
    "description": "Dotenv Description",
    "keywords": [
        "kortdev",
        "dotenv-editor"
    ],
    "homepage": "https://github.com/kortdev/dotenv-editor",
    "license": "MIT",
    "authors": [
        {
            "name": "LTKort",
            "email": "lars@kort.dev",
            "homepage": "https://kort.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Kortdev\\DotenvEditor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kortdev\\DotenvEditor\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
